<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/block_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- 第一行：图标 + 名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_block_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/tv_block_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Crypto"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 市值排名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="市值排名"
            android:textColor="?attr/colorOnPrimary"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_block_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="No.1"

            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 区块高度 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="区块高度"
            android:textColor="?attr/colorOnPrimary"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_block_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 最新出块时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最新出块时间"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_block_last_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="end"

        android:text="@string/default_time_str"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp" />
</LinearLayout>
