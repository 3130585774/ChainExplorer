<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_333333"
    android:orientation="vertical"

    android:paddingTop="20dp">

    <!--图标-->

    <!--标题-->

    <ImageView
        android:layout_width="133dp"
        android:layout_height="127dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/btc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="@string/app_name"
        android:textColor="@color/white_color"
        android:textSize="30sp" />

    <!--搜索栏行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_explorer_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--展示用户的选项-->
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="BTC"
            android:textColor="@color/c_333333" />

        <!--供用户输入内容的输入框-->
        <EditText
            android:id="@+id/et_hash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入内容"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_999999"
            android:textSize="15sp" />

        <!--向右的箭头-->
        <Button
            android:id="@+id/btn_search"
            android:layout_width="26dp"
            android:layout_height="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_arrow_right" />
    </LinearLayout>

